<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cpjandmatcomps.ecogetsi" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ECOGETSI</name>
    <description>
        USSD application to buy Zimbabwe electricity using ecocash without need to remember your metre number everytime you want to make a purchase
    </description>
    <author email="admiremasaga@gmail.com" href="http://cpjandmatcomps.tech">
        Admire Masaga
    </author>
	<preference name="SplashScreen" value="screen" />
	<preference name="SplashScreenDelay" value="3000" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
	<platform name="android">
		<splash src="splash.png" width="320" height="480"/>
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
	<plugin name="cordova-plugin-splashscreen" spec="~3.2.2" />
	<plugin spec="https://github.com/Rohfosho/CordovaCallNumberPlugin.git"/>
	<plugin name="cordova-plugin-sms-receiver/>
	<splash src="splash.png" platform="android" width="320" height="480"/>
	<icon src="icon.png" />
	<splash src="splash.png" width="320" height="480"/>
</widget>
